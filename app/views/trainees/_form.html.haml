= form_for(@trainee) do |f|
  -if @trainee.errors.any? 
    .error_explanation
      %h2= pluralize(@trainee.errors.count, "error")+"  prohibited this trainee from being saved:"
      %ul
        -@trainee.errors.full_messages.each do |msg|
          %li=msg

  .field
    =f.label :name 
    %br
    =f.text_field :name 
  .field
    =f.label :umid, "UMID "
    %br
    =f.number_field :umid 
  .field
    = f.label :phone 
    %br
    = f.phone_field :phone 
  .field
    = f.label :email 
    %br
    = f.text_field :email 
  .field
    = f.label :status 
    %br
    = f.select :status, options_for_select(%w(student faculty alumnus community).map{|a| [a.capitalize, a]}) 
  .field
    = f.label :dept, "What school/department, if applicable?" 
    %br
    = f.text_field :dept 
  .field
    = f.label :experience, "Any previous radio experience? Where and how long?" 
    %br
    = f.text_area :experience 
  .field
    = f.label :referral, "How did you find out about WCBN?" 
    %br
    = f.text_area :referral 
  .field
    = f.label :interests 
    %br
    What aspect of radio are you most interested in doing? Choose as many as apply.
    .interest_links
      Broadcasting: 
      = (%w(freeform/music talkshow sports).map{|i| interest_link(i) }*"").html_safe 
      %br
      Off-Air Work:
      = (%w(development engineering events social-media website carts publicity music-review library).map{|i| interest_link(i) }*"").html_safe 
    = f.text_area :interests 
  .field.hidden
    = f.label :statement 
    %br
    = f.text_area :statement 

  - if @trainers_view 
    .field
      = f.label :stage1 
      %br
      = f.text_area :stage1 
    .field
      = f.label :demotape 
      %br
      = f.text_area :demotape 
    .field
      = f.label :stage2 
      %br
      = f.text_area :stage2 
    .field
      = f.label :apprenticeship_freeform1 
      %br
      = f.text_area :apprenticeship_freeform1 
    .field
      = f.label :apprenticeship_freeform2 
      %br
      = f.text_area :apprenticeship_freeform2 
    .field
      = f.label :apprenticeship_specialty1 
      %br
      = f.text_area :apprenticeship_specialty1 
    .field
      = f.label :apprenticeship_specialty2 
      %br
      = f.text_area :apprenticeship_specialty2 
    .field
      = f.label :broadcasters_exam 
      %br
      = f.text_area :broadcasters_exam 
  .actions
    = f.submit 
